  <script>
    // Selecting login and registration forms by their id attributes
    var loginForm = document.getElementById('login-form');
    var registrationForm = document.getElementById('ownerregistration-form');
    var petForm = document.getElementById('pet-form');

    // Function to toggle between login and registration forms
    function toggleForm(formType) {
      if (formType === 'login') {
        loginForm.style.display = 'block';
        registrationForm.style.display = 'none';
        petForm.style.display = 'none';
      } else if (formType === 'ownerregister') {
        loginForm.style.display = 'none';
        registrationForm.style.display = 'block';
        petForm.style.display = 'none';
      }
      else if (formType === 'petform') {
        loginForm.style.display = 'none';
        registrationForm.style.display = 'none';
        petForm.style.display = 'block';

      }
    }
    function addPetField() {
      var petFields = document.getElementById('pet-fields');
      var petFieldTemplate = document.querySelector('.pet').cloneNode(true);
      petFields.appendChild(petFieldTemplate);
    }
  </script>
